cc_binary {

    name: "evs_app_xt",
    vendor: true,
    defaults: ["hidl_defaults"],

    srcs: [
        "evs_app.cpp",
        "EvsStateControl.cpp",
        "RenderBase.cpp",
        "RenderDirectView.cpp",
        "RenderPixelCopy.cpp",
        "RenderTopView.cpp",
        "ConfigManager.cpp",
        "glError.cpp",
        "shader.cpp",
        "TexWrapper.cpp",
        "VideoTex.cpp",
        "StreamHandler.cpp",
        "WindowSurface.cpp",
        "FormatConvert.cpp",
    ],
    header_libs: [
        "libgui_headers",
    ],

    shared_libs: [
        "libbase",
        "libbinder",
        "libhidlbase",
        "libcutils",
        "liblog",
        "libutils",
        "libui",
        "libEGL",
        "libGLESv2",
        "libhardware",
        "libpng",
        "android.hidl.token@1.0-utils",
        "android.hardware.automotive.evs@1.0",
        "android.hardware.automotive.vehicle@2.0",
        "android.hardware.graphics.bufferqueue@1.0",
        "android.hardware.graphics.bufferqueue@2.0"
    ],

    static_libs: [
        "libmath",
        "libjsoncpp",
    ],

    strip: {none:true},

    init_rc: ["evs_app_xt.rc"],

    cflags: ["-DLOG_TAG=\"EvsApp\""] + [
        "-DGL_GLEXT_PROTOTYPES",
        "-DEGL_EGLEXT_PROTOTYPES",
        "-DNO_INPUT",
    ] + [
        "-Wall",
        "-Werror",
        "-Wunused",
        "-Wunreachable-code",
    ],

}
